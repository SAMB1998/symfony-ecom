{% extends 'base.html.twig' %}

{% block title %}categories{% endblock %}

{% block body %}
    <div class="container"><br><br>
        <h1>Categories</h1><br>
        {% include 'layout/_flash_message.html.twig'%}
        <table class="table">
            <tr>
                <th>id</th>
                <th>nom de la categorie</th>
                <th>action</th>
            </tr>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a class="btn btn-outline-primary" href="{{ path('app_category_update',{'id':category.id})}}">Modifier</a>
                        <a onclick="return confirm('voulez-vous supprimer cette catégorei ?')" class="btn btn-danger" href="{{ path('app_category_delete',{'id':category.id})}}">Supprimer</a>
                    </td>
                </tr>
                {% else %}
                <p>Ausune categorie à afficher pour l'instant</p>
            {% endfor %}    
        </table>
        </br>
        <a class="btn btn-outline-primary" href="{{ path('app_category_new')}}">Ajoute une category</a>
    </div>
{% endblock %}
